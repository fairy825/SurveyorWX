.item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding: 20rpx 35rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #fff;
  position:relative;
}

 .item:last-child {
  margin-bottom: 0;
}
 .itemleft{
  width:80%;
  height:100%;
}
/* .messages .itemright{
  display:inline-flex;
} */
 .money{
  color:red;
  font-size:36rpx;
  font-weight: bold;
  text-align: right;
  position:absolute;
  top:50rpx;
  right:20rpx;
  display:flex;

}
 .itemleft .title {
  font-size: 40rpx;
  color: #222;
}
 .date {
  /* margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eee; */
  font-size: 20rpx;
  color: #888;
  position:absolute;
  bottom:20rpx;
  right:20rpx;
  display:flex;
}

 .item image {
  width: 100%;
  height: 300rpx;
  margin: 10rpx 0;
}

.itemleft .summary {
  margin-top:20rpx;
  display: flex;
  /* margin-bottom: 10rpx;
  padding-bottom: 10rpx; */
  /* border-bottom: 1rpx solid #eee; */
  font-size: 26rpx;
  color: #888;
}
 .item .expand {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 30rpx;
}
.divider {
  height: 20rpx;
  background-color: #f0f0f0;
  box-shadow: inset 0 1rpx 2rpx #eee;
}
.button{
 padding:80rpx 0;
}
.new{
  background-color: #3a4861;
  color:white;
  width:70%;
  height:80rpx;
  line-height:60rpx;
  padding:10rpx 0;
  border:1px solid #3a4861;
}

.head{
  display: flex;
  justify-content: space-between;
  position: relative;
  padding: 50rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
  font-size: 30rpx;
  flex-direction: column;
  /* height:150rpx; */
}
.content{
  background-color: white;
  height:100%;
  width:100%;
}
.content .q{
  padding:30rpx;

}
.queshead{
  margin:10rpx 0;
}
.queschoice{
  margin:20rpx;
}
.upper{
  position:relative;
  font-size:30rpx;
  height: 30rpx;
}
.lower{
  position:relative;
  font-size:30rpx;
  height: 30rpx;
}
.former{
  position:absolute;
  left:0;
}
 .later{
  position:absolute;
  right:0;
}
.quesblank{
  margin:20rpx;
  border:1px solid #ddd;
}


